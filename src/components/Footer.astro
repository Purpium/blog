---
import Container from "@components/Container.astro";
const today = new Date();
---

<footer>
  <Container>
    <div class="flex flex-col items-center justify-center gap-y-1">
      <div class="flex items-center justify-center">
        <p class="text-center">
          Powered by copium. Made with twigs and shit by Prple, {
            today.getFullYear()
          }.
        </p>
      </div>
      <div class="flex flex-wrap items-center justify-center gap-4">
        <div class="group flex flex-col items-center">
          <span
            class="mb-1 text-xs text-white opacity-0 transition-opacity duration-200 group-hover:text-orange-400 group-hover:opacity-100"
          >
            RSS
          </span>
          <button
            id="rss"
            aria-label="RSS feed"
            class="transition-colors duration-200 group-hover:text-orange-400"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="feather feather-rss"
            >
              <path d="M4 11a9 9 0 0 1 9 9"></path>
              <path d="M4 4a16 16 0 0 1 16 16"></path>
              <circle cx="5" cy="19" r="1"></circle>
            </svg>
          </button>
        </div>
        <div class="group flex flex-col items-center">
          <span
            class="mb-1 text-xs text-white opacity-0 transition-opacity duration-200 group-hover:text-purple-400 group-hover:opacity-100"
          >
            Astro
          </span>
          <a
            href="https://astro.build/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Powered actually by Astro"
            class="flex items-center justify-center transition-colors duration-200 group-hover:text-purple-400"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 128 128"
              fill="currentColor"
            >
              <path
                d="M81.504 9.465c.973 1.207 1.469 2.836 2.457 6.09l21.656 71.136a90.079 90.079 0 0 0-25.89-8.765L65.629 30.28a1.833 1.833 0 0 0-3.52.004L48.18 77.902a90.104 90.104 0 0 0-26.003 8.778l21.758-71.14c.996-3.25 1.492-4.876 2.464-6.083a8.023 8.023 0 0 1 3.243-2.398c1.433-.575 3.136-.575 6.535-.575H71.72c3.402 0 5.105 0 6.543.579a7.988 7.988 0 0 1 3.242 2.402Z"
              ></path>
              <path
                d="M84.094 90.074c-3.57 3.055-10.696 5.137-18.903 5.137-10.07 0-18.515-3.137-20.754-7.356-.8 2.418-.98 5.184-.98 6.954 0 0-.527 8.675 5.508 14.71a5.671 5.671 0 0 1 5.672-5.671c5.37 0 5.367 4.683 5.363 8.488v.336c0 5.773 3.527 10.719 8.543 12.805a11.62 11.62 0 0 1-1.172-5.098c0-5.508 3.23-7.555 6.988-9.938 2.989-1.894 6.309-4 8.594-8.222a15.513 15.513 0 0 0 1.875-7.41 15.55 15.55 0 0 0-.734-4.735Z"
              ></path>
            </svg>
          </a>
        </div>
        <div class="group flex flex-col items-center">
          <span
            class="catppuccin-rainbow mb-1 text-xs text-white opacity-0 transition-opacity duration-200 group-hover:opacity-100"
          >
            Cat
          </span>
          <a
            href="https://catppuccin.com/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Catppuccin colors"
            class="transition-colors duration-200"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 1024 1024"
            >
              <defs>
                <linearGradient
                  id="catppuccin-gradient"
                  x1="0%"
                  y1="0%"
                  x2="100%"
                  y2="0%"
                >
                  <stop offset="0%" stop-color="#cba6f7"></stop>
                  <stop offset="20%" stop-color="#74c7ec"></stop>
                  <stop offset="40%" stop-color="#a6e3a1"></stop>
                  <stop offset="60%" stop-color="#f9e2af"></stop>
                  <stop offset="80%" stop-color="#fab387"></stop>
                  <stop offset="100%" stop-color="#f38ba8"></stop>
                </linearGradient>
              </defs>
              <mask id="cat-cutout">
                <rect width="1024" height="1024" fill="white"></rect>
                <path
                  fill="black"
                  d="M269.674,977.131C277.459,917.643 288.971,865.594 304.253,820.942C230.693,783.22 176.311,719.788 163.638,628.187C152.587,548.35 170.863,455.283 218.463,389.317C206.77,345.051 190.821,259.827 202.438,211.44C205.5,198.683 217.086,190.138 230.218,190.947C292.238,194.792 342.533,219.1 383.109,266.19C459.454,237.793 556.31,238.25 619.339,256.653C652.324,210.83 691.445,186.095 743.348,173.414C755.547,170.423 767.822,175.993 773.592,187.117C796.857,232.01 799.322,295.076 787.46,347.476C937.257,492.043 898.963,702.56 732.756,802.631C744.947,862.032 751.721,923.505 753.048,987.084C683.119,1022.01 604.253,1041.67 520.833,1041.67C429.796,1041.67 344.182,1018.26 269.674,977.131Z"
                ></path>
              </mask>
              <circle
                cx="512"
                cy="512"
                r="512"
                fill="url(#catppuccin-gradient)"
                mask="url(#cat-cutout)"
                class="catppuccin-rainbow-svg"></circle>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <style>
      .catppuccin-rainbow {
        transition:
          background 0.5s,
          color 0.5s;
      }
      .group:hover .catppuccin-rainbow,
      .group:focus .catppuccin-rainbow {
        background: linear-gradient(
          90deg,
          #cba6f7,
          #74c7ec,
          #a6e3a1,
          #f9e2af,
          #fab387,
          #f38ba8
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
      }
      .catppuccin-rainbow-svg {
        transition: filter 0.5s;
        filter: grayscale(1);
      }
      .group:hover .catppuccin-rainbow-svg,
      .group:focus .catppuccin-rainbow-svg {
        filter: grayscale(0);
      }
    </style>
  </Container>
</footer>
