---
import Container from "@components/Container.astro";

// Revise to terminal style animation later
// Please put into another .astro file ok?
// Maybe use typewriter effect library idk
const messages = [
  "Screw unit testing. The vibes will carry us!",
  "I wonder which moron coded this blog. Oh it's me",
  "Sorry there ain't no light mode chief",
  "Catppuccin <3",
  "Did the code pass the daily vibe check?",
];
---

<header>
  <Container>
    <div class="flex flex-col gap-y-4">
      <div class="text-center text-4xl font-semibold">Prple's blog</div>
      <p class="text-center text-sm text-white/50 italic select-none">
        {messages[Math.floor(Math.random() * messages.length)]}
      </p>
      <div class="flex flex-wrap items-center justify-center">
        <div class="group flex flex-col items-center gap-2">
          <a
            href="https://prple.dev/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Home"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="transition-colors duration-300 ease-in-out group-hover:animate-pulse group-hover:stroke-black group-focus-visible:animate-pulse group-focus-visible:stroke-black dark:group-hover:stroke-white dark:group-focus-visible:stroke-white"
              ><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
              ></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg
            >
          </a>
          <span
            class="mb-1 text-xs text-white opacity-0 transition-opacity duration-200 group-hover:text-gray-400 group-hover:opacity-100"
          >
            Home
          </span>
        </div>
        <div class="group flex flex-col items-center gap-2">
          <a>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="-1 -1 26 26"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="transition-colors duration-300 ease-in-out group-hover:animate-pulse group-hover:stroke-black group-focus-visible:animate-pulse group-focus-visible:stroke-black dark:group-hover:stroke-white dark:group-focus-visible:stroke-white"
            >
              <path
                d="M11.955.49A12 12 0 0 0 0 12.49a12 12 0 0 0 1.832 6.373L11.838 5.928a.187.14 0 0 1 .324 0l10.006 12.935A12 12 0 0 0 24 12.49a12 12 0 0 0-12-12 12 12 0 0 0-.045 0z"
              ></path>
              <path d="M12.33 6.957l4.416 16.553a12 12 0 0 0 5.137-4.213z"
              ></path>
            </svg>
          </a>
          <span
            class="mb-1 text-xs text-white opacity-0 transition-opacity duration-200 group-hover:text-gray-400 group-hover:opacity-100"
          >
            Codeberg
          </span>
        </div>
        <div class="group flex flex-col items-center gap-2">
          <a
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="transition-colors duration-300 ease-in-out group-hover:animate-pulse group-hover:stroke-black group-focus-visible:animate-pulse group-focus-visible:stroke-black dark:group-hover:stroke-white dark:group-focus-visible:stroke-white"
              ><path
                d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
              ></path></svg
            ></a
          >
          <span
            class="mb-1 text-xs text-white opacity-0 transition-opacity duration-200 group-hover:text-gray-400 group-hover:opacity-100"
          >
            GitHub
          </span>
        </div>
        <div class="group flex flex-col items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="transition-colors duration-300 ease-in-out group-hover:animate-pulse group-hover:stroke-black group-focus-visible:animate-pulse group-focus-visible:stroke-black dark:group-hover:stroke-white dark:group-focus-visible:stroke-white"
            ><path
              d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"
            ></path></svg
          >
          <span
            class="mb-1 text-xs text-white opacity-0 transition-opacity duration-200 group-hover:text-gray-400 group-hover:opacity-100"
          >
            Projects
          </span>
        </div>
      </div>
    </div>
  </Container>
</header>
